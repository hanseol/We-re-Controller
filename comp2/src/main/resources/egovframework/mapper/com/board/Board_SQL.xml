<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://www.ibatis.com/dtd/sql-map-2.dtd">

<sqlMap namespace="Board">
	
	<typeAlias  alias="egovMap" type="egovframework.rte.psl.dataaccess.util.EgovMap"/>
	<typeAlias  alias="boardSerarchVO" type="egovframework.com.board.service.BoardDefaultVO"/>
	
	<resultMap id="board" class="egovframework.com.board.service.BoardVO">
		<result property="no" column="NO" columnIndex="1"/>
		<result property="title" column="TITLE" columnIndex="2"/>
		<result property="content" column="CONTENT" columnIndex="3"/>
		<result property="wdate" column="WDATE" columnIndex="4"/>
	</resultMap>
	
	<insert id="boardDAO.insertBoard_S">
		<![CDATA[
			INSERT INTO BOARD 
				( NO
				  , TITLE
				  , CONTENT
				  , WDATE )
			VALUES ( #no#
				  , #title#
				  , #content#
				  , #wdate# )
		]]>
	</insert>
	
	<update id="boardDAO.updateBoard_S">
		<![CDATA[
			UPDATE BOARD
			SET NO=#no#
				, TITLE=#title#
				, CONTENT=#content#
				, WDATE=#wdate#
						WHERE NO=#no#
				]]>
	</update>
	
	<delete id="boardDAO.deleteBoard_S">
		<![CDATA[
			DELETE FROM BOARD 
						WHERE NO=#no#
				]]>
	</delete>
	
	<select id="boardDAO.selectBoard_S" resultMap="board">
		<![CDATA[
			SELECT
				NO
				, TITLE
				, CONTENT
				, WDATE
			FROM BOARD
						WHERE NO=#no#
				]]>
	</select>
	
	<select id="boardDAO.selectBoardList_D" parameterClass="boardSerarchVO" resultClass="egovMap">
SELECT * FROM (
	SELECT A.*, ROWNUM RNUM FROM (
				SELECT
								NO
								, TITLE
								, CONTENT
								, WDATE
						FROM BOARD
				WHERE 1=1
				<isEqual prepend="AND" property="searchCondition" compareValue="0">
					NO = #searchKeyword#
				</isEqual>
				<isEqual prepend="AND" property="searchCondition" compareValue="1">
					TITLE LIKE '%' || #searchKeyword# || '%'
				</isEqual>
					ORDER BY 
						NO DESC
		
		<![CDATA[					
	) A WHERE ROWNUM <= #lastIndex#
)WHERE RNUM > #firstIndex#
]]>
	</select>	
	<select id="boardDAO.selectBoardListTotCnt_S" parameterClass="boardSerarchVO" resultClass="int">
			SELECT COUNT(*) totcnt
			FROM BOARD
			WHERE 1=1
			<isEqual prepend="AND" property="searchCondition" compareValue="0">
				NO = #searchKeyword#
			</isEqual>
			<isEqual prepend="AND" property="searchCondition" compareValue="1">
				TITLE LIKE '%' || #searchKeyword# || '%'
			</isEqual>
	</select>

</sqlMap>
